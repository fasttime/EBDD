{
  "name": "ebdd",
  "version": "0.7.1",
  "description": "Extended BDD interface for Mocha",
  "keywords": [
    "bdd",
    "mocha",
    "test"
  ],
  "homepage": "https://github.com/fasttime/EBDD",
  "bugs": "https://github.com/fasttime/EBDD/issues",
  "license": "ISC",
  "author": "Francesco Trotta <ft@fasttime.org> (https://github.com/fasttime)",
  "files": [
    "ebdd.js",
    "lib"
  ],
  "main": "ebdd.js",
  "types": "lib/ebdd.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fasttime/EBDD.git"
  },
  "scripts": {
    "build": "npm install && gulp",
    "clean": "node dev/clean",
    "coverage": "nyc --include=src --reporter=html --reporter=text-summary npm test",
    "legacy-test": "node -- test/node-legacy/node_modules/mocha/bin/mocha --check-leaks --require=test/node-legacy-adapter test/node-legacy/test/spec/**/*.spec.js",
    "lint": "node dev/lint",
    "make": "npm run make-lib",
    "make-browser-spec-runner": "node dev/make-browser-spec-runner",
    "make-lib": "node dev/make-lib",
    "prepare": "node dev/patch-sinon",
    "prepare-legacy-test": "node dev/prepare-legacy-test",
    "test": "mocha --check-leaks --require=ts-node/register test/spec/**/*.spec.ts"

  },
  "devDependencies": {
    "@babel/eslint-parser": "latest",
    "@babel/plugin-syntax-top-level-await": "latest",
    "@fasttime/lint": "latest",
    "@rollup/plugin-node-resolve": "latest",
    "@types/mocha": "latest",
    "@types/sinon": "latest",
    "fast-glob": "latest",
    "gulp": "latest",
    "gulp-ignore": "latest",
    "gulp-rename": "latest",
    "gulp-typescript": "5",
    "merge-stream": "latest",
    "mocha": "latest",
    "mocha_3": "npm:mocha@3",
    "mocha-bar": "latest",
    "nyc": "latest",
    "postrequire": "latest",
    "rollup": "latest",
    "rollup-plugin-cleanup": "latest",
    "rollup-plugin-node-builtins": "latest",
    "rollup-plugin-node-globals": "latest",
    "sinon": "9",
    "ts-node": "latest",
    "tslib": "2",
    "typescript": "4.3"
  },
  "peerDependencies": {
    "mocha": ">=3.0.0"
  },
  "type": "module"
}
